@model List<MiniSore.Models.TblSale>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h2>Son Gönderiler Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Oluşturulma Tarihi</th>
        <th>Görseli</th>
        <th>Kategorisi</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SaleID</td>
            <td>@item.Title</td>
            <td>@item.CreatedDate</td>
            <td>@item.ImageUrl</td>
            <td>@item.TblCategory.CategoryName</td>
            <td><a href="/Sale/DeleteSale/@item.SaleID/" class="btn btn-warning">Sil</a></td>
            <td><a href="/Sale/UpdateSale/@item.SaleID/" class="btn btn-success">Güncelle</a></td>
            <td></td>
        </tr>
    }
</table>
<a href="/Sale/CreateSale" class="btn btn-info">Yeni Anasayfa Girişi</a>

