@model List<MiniSore.Models.TblWatches>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h2>Saat Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Ürün Fiyatı</th>
        <th>Ürün Görseli Yolu</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.WatchesID</td>
            <td>@item.WatchesName</td>
            <td>@item.WatchesPrice$</td>
            <td>@item.ImageUrl</td>
            <td><a href="/Watches/DeleteProduct/@item.WatchesID/" class="btn btn-warning">Sil</a></td>
            <td><a href="/Watches/UpdateProduct/@item.WatchesID/" class="btn btn-success">Güncelle</a></td>
            <td></td>
        </tr>
    }
</table>
<a href="/Watches/CreateProduct" class="btn btn-info">Yeni Saat Girişi</a>